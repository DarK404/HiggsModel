<?xml version="1.0"?>
<launch>
  <!-- start Webots -->
  <arg name="no-gui" default="false," doc="Start Webots with minimal GUI"/>
  <include file="$(pioneer_description)/launch/webots.launch">
    <arg name="mode" value="realtime"/>
    <arg name="no-gui" value="$(arg no-gui)"/>
    <arg name="world" value="$(find (pioneer_description)/Pioneer_webots/worlds/pioneer.wbt"/>
  </include>

  <arg name="auto-close" default="false" doc="Startup mode"/>
  <node name="pioneer2at_controller" pkg="pioneer_description" type="pioneer2at" required="$(arg auto-close)"/>
</launch>
